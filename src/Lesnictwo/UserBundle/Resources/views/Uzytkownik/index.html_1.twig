{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Użytkownicy Systemu</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Hasło</th>
                <th>Email</th>
                <th>Typ</th>
                <th>Imie</th>
                <th>Nazwisko</th>
                <th>Leśnictwo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('users_show', { 'uzytkownikId': entity.uzytkownikId }) }}">{{ entity.uzytkownikId }}</a></td>
                <td>{{ entity.login }}</td>
                <td>{{ entity.haslo }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.rodzaj }}</td>
                <td>{{ entity.imie }}</td>
                <td>{{ entity.nazwisko }}</td>
                <td>{{ entity.lesnictwo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('users_show', { 'uzytkownikId': entity.uzytkownikId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('users_edit', { 'uzytkownikId': entity.uzytkownikId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('users_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
